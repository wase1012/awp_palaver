	<persistence-unit name="awpPersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- Palaver Team 2-->
		<class>de.bistrosoft.palaver.lieferantenverwaltung.domain.Ansprechpartner</class>
		<class>de.bistrosoft.palaver.lieferantenverwaltung.domain.Lieferant</class>
		<class>de.bistrosoft.palaver.artikelverwaltung.domain.Artikel</class>
		<class>de.bistrosoft.palaver.artikelverwaltung.domain.Kategorie</class>
		<class>de.bistrosoft.palaver.artikelverwaltung.domain.Mengeneinheit</class>
		<class>de.bistrosoft.palaver.bestellverwaltung.domain.Bestellung</class>
		<class>de.bistrosoft.palaver.bestellverwaltung.domain.Bestellposition</class>
		<class>de.bistrosoft.palaver.nachrichtenverwaltung.domain.Nachricht</class>
		
		<!-- Palaver Team 1-->
		<class>de.bistrosoft.palaver.dienstplanverwaltung.domain.Schichtplan</class>
		<class>de.bistrosoft.palaver.menueplanverwaltung.domain.Menue</class>
		<class>de.bistrosoft.palaver.menueplanverwaltung.domain.Menueplan</class>
		<class>de.bistrosoft.palaver.menueplanverwaltung.domain.MenueplanId</class>
		<class>de.bistrosoft.palaver.mitarbeiterverwaltung.domain.Mitarbeiter</class>
		<class>de.bistrosoft.palaver.mitarbeiterverwaltung.domain.Rollen</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.Rezept</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.Rezeptart</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasArtikel</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasArtikelId</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.Fussnote</class>
	<!--<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasArtikelId</class> -->
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.Geschmack</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.Zubereitung</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasZubereitung</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasFussnote</class>
		<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasFussnoteId</class>
	<!--<class>de.bistrosoft.palaver.rezeptverwaltung.domain.RezeptHasArtikelId</class>  -->

		<validation-mode>NONE</validation-mode>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/palaver"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="awp"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		
			<!-- Keine proprietaeren Erweiterungen von HQL nutzen -->
			<property name="hibernate.query.jpaql_strict_compliance" value="true"/>
	
			<!-- In der Log-Datei die SQL-Anweisungen lesbarer rausschreiben -->
			<property name="hibernate.format_sql" value="true"/>

			<!-- In der Log-Datei auch Kommentare zu den generierten SQL-Anweisungen hinzufuegen -->
			<property name="hibernate.use_sql_comments" value="true"/>
			
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
			<property name="hibernate.connection.pool_size" value="1"/>
		    
		</properties>		
		
	</persistence-unit>
</persistence>
